#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/{
    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
                &kp NUMLOCK  &kp KP_SLASH   &kp KP_ASTERISK  &kp KP_MINUS
                &kp KP_7     &kp KP_8       &kp KP_9         &kp KP_PLUS
                &kp KP_4     &kp KP_5       &kp KP_6         &mo 1
                &kp KP_1     &kp KP_2       &kp KP_3         &kp KP_ENTER
                &kp KP_0     &none          &kp KP_DOT       &none
            >;
        };

        bt_layer {
            bindings = <
                &none        &none        &none        &none
                &none        &none        &none        &none
                &none        &none        &none        &none
                &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &bootloader
                &none        &none        &bt BT_CLR   &none
            >;
        };
    };
};
